<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
 
    <TextView
        android:id="@+id/titlee"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"
        android:text="@string/lets_try2"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#cc000000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />
    
    <View android:id="@+id/titleDivider"
        android:layout_below="@+id/titlee"
        android:background="@drawable/navigation_divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0px" />
    
    <TextView
        android:id="@+id/text3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleDivider"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:scrollbars="vertical"
        android:text="@string/lets_try" />
    
    <View android:id="@+id/titleDivider2"
        android:layout_below="@+id/text3"
        android:background="@drawable/navigation_divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0px" />
 
     <Button
         android:id="@+id/dialogButtonOK"
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:layout_below="@+id/titleDivider2"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="1dp"
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp"
         android:layout_marginTop="20dp"
         android:background="@drawable/btn_bg_dialog_light"
         android:text="OK"
         android:textSize="12sp"
         android:textColor="#ff747474" />
     <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogButtonOK"
        android:gravity="center_horizontal"
        android:text="@null" />
 
</RelativeLayout>